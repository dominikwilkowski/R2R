 * List styles
 *
 **************************************************************************************************************************************************************/


.list-flat
	list-style none
	padding 0
	margin 0.375em 0
	display block

	&.list-flat-sm
		font-size 13px

	li
		display inline-block

		&+ li:before
			content ' '
			display inline-block
			height 0.85em
			width 1px
			margin 0 0.625em -0.05em 0.625em
			border-left 1px solid color1