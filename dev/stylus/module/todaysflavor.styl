.todaysflavor
	.todaysflavor-list
		overflow hidden
		list-style none
		padding 0
		margin 0

	.todaysflavor-item
		float left
		background #fff
		width 100%

		@media media-sm
			width 33%

			&:nth-child(3n+1)
				clear left

	.todaysflavor-content
		min-height 84px
		border 2px solid color1
		margin 6px
		padding 12px

	.todaysflavor-title
		padding 0
		margin 0
		text-align center
		font-size 18px
		font-weight 700
		color color1
		min-height 42px

	.todaysflavor-imgs
		margin-top 12px
		text-align right

	.todaysflavor-img
		height 25px
		width auto