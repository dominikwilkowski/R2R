/***************************************************************************************************************************************************************
 *
 * Product styles
 *
 **************************************************************************************************************************************************************/


.products
	.products-key-wrapper
		display none
		*zoom:1

		&:before,
		&:after
			content:""
			display:table
		&:after
			clear:both

		@media media-sm
			display block

	.products-key
		float left
		margin-left 33%
		position relative
		width 180px
		height 140px
		top 9px
		left 52px

		.products-key-bubble
		.products-key-size
			position absolute
			z-index 10

		.products-key-size
			top 52px

		&.products-key-epic
			.products-key-bubble
				left 3px
				top 31px

			.products-key-size
				width 89px
				height auto
				top 86px
				left 40px

		&.products-key-sumo
			margin-left 12px

			.products-key-size
				left 20px
				width 134px
				height 86px

		&.products-key-topping
			height 53px
			left 65px

.product-list
	list-style none
	padding 1em
	margin 0
	overflow hidden
	background #fff no-repeat right center

	@media media-max-sm
		background-image none !important

.product-item
	display block

.product-form
	clear both

	.product-title
		float left
		width 100%

		@media media-sm
			width 33%

	.product-addbox
		float left
		width 100%

		@media media-sm
			width auto