/***************************************************************************************************************************************************************
 *
 * Cart styles
 *
 **************************************************************************************************************************************************************/


.cart
	.quantity
		font-size 14px

	.cart-bottom
		margin 24px 0
		min-height 376px

		&.has-nodelivery
			&:before
				content 'Please choose a delivery date'
				display block
				font-size 16px
				color color3
				text-align right

			.cart-bottom-wrapper
				display none

	.card-greetingcard
		width 100%
		box-sizing border-box
		margin-top 1em
		height 4.3em
		padding 0.9em
		font-family r2rfont
		letter-spacing 1px
		-webkit-appearance none
		border 1px solid color1

	.cart-bottom-tac
		max-height 150px
		overflow auto
		padding 0 12px 12px 12px
		margin-bottom 18px
		border 1px solid color1
		background rgba(255, 255, 255, 0.6)

	.cart-btn
		margin 24px 0

	// .cart-tac:not(:checked) + .cart-tac-label + .cart-btn-wrapper
	.cart-btn-wrapper a
		display none

	.cart-tac-label
		margin 24px 0

	.cart-tac
		&+ .cart-tac-label + .cart-btn-wrapper span
			opacity 0.5

		&:checked
			&+ .cart-tac-label + .cart-btn-wrapper a
				display inline-block

			&+ .cart-tac-label + .cart-btn-wrapper span
				display none