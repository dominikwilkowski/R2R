 * Cart styles
 *
 **************************************************************************************************************************************************************/


.cart
	.cart-table
		width 100%
		background #fff

		.cart-table-headline th
			background-color shade1
			border-bottom 12px solid #fff
			font-weight 300

		.cart-table-headline th
		.cart-table-body td
		.cart-table-total td
			padding 15px
			font-size 18px
			text-transform uppercase
			text-align left

		.cart-table-body td
			background-color shade2

		.cart-table-total td
			background-color #fff

		.cart-table-price
		.cart-table-total
			display none

			@media media-sm
				display table-cell

	.cart-btn
		margin 24px 0