<div class="cart">
	<h1 class="cart-headline">Shopping Cart</h1>

	{% if cart.item_count > 0 %}

		<form class="cart-form" action="/cart" method="post">

			<table class="cart-table">

				<thead class="cart-table-headline">
					<tr>
						<th class="cart-table-img">Item</th>
						<th class="cart-table-title">&nbsp;</th>
						<th class="cart-table-price">Price</th>
						<th class="cart-table-quanity">Quantity</th>
						<th class="cart-table-total">Total</th>
						<th class="cart-table-remove">&nbsp;</th>
					</tr>
				</thead>

				<tbody>

					{% for item in cart.items %}

						{% assign collection_url = '/collections/all' %}
						{% assign continue_shopping_url = collection_url %}

						<tr>
							<td class="cart-table-img">
								<a href="{{ collection_url }}{{ item.url }}">
									<img src="{{ item | img_url: 'compact' }}"  alt="{{ item.title | escape }}">
								</a>
							</td>
							<td class="cart-table-title">
								<a href="{{ collection_url }}{{ item.url }}">
									{{ item.title }}
								</a>

								{% comment %}
									Line Item Properties
								{% endcomment %}
								{% assign properties_amount = item.properties | size %}
								{% if properties_amount > 0 %}
									<p>
										{% for p in item.properties %}
											{% unless p.last == blank %}
												{{ p.first }}:
												{% if p.last contains '/uploads/' %}
													<a href="{{ p.last }}">{{ p.last | split: '/' | last }}</a>
												{% else %}
													{{ p.last }}
												{% endif %}
												<br>
											{% endunless %}
										{% endfor %}
									</p>
								{% endif %}
								{% comment %}<h3 class="epsilon">{{ item.vendor }}</h3>{% endcomment %}
							</td>
							<td class="cart-table-price">{{ item.price | money }}</td>
							<td class="cart-table-quantity">
								<input type="number" name="updates[]" id="updates_{{ item.id }}" class="quantity" value="{{ item.quantity }}">
							</td>
							<td class="cart-table-total">
								{{ item.line_price | money }}
							</td>
							<td class="cart-table-remove">
								<a href="/cart/change?line={{ forloop.index }}&amp;quantity=0">Remove</a>
							</td>
						</tr>
					{% endfor %}

				</tbody>

			</table>

			<div class="cart-buttons">
				<h3 class="cart-buttons-subtotal">Subtotal <em>{{ cart.total_price | money }}</em></h3>
				<a class="cart-buttons-continue" href="{{ continue_shopping_url }}">Continue shopping</a>
				<span class="cart-buttons-or">or</span>
				<input class="cart-buttons-update" type="submit" name="update" value="Update cart">
				<span class="cart-buttons-or">or</span>
				<input class="cart-buttons-checkout" type="submit" name="checkout" value="Check out">

				{% if additional_checkout_buttons %}
					<p class="cart-buttons-additional-checkout-buttons">
						{{ content_for_additional_checkout_buttons }}
					</p>
				{% endif %}
			</div>

			<div class="cart-additional-infos">
				<p>Additional information</p>
				<textarea name="note">{{ cart.note }}</textarea>
			</div>

		</form>

	{% else %}

		<div>
			<h2 class="gamma">It appears that your cart is currently empty!</h2>
			<h3 class="delta">You can continue browsing <a href="/collections/all">here</a>.</h3>
		</div>

	{% endif %}
</div>